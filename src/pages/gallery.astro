---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import InstagramGallery from "../components/InstagramGallery";

// SEO Metadata
const title = "Project Gallery | Rangel Valley Painting - Bakersfield, CA";
const description =
    "Explore our gallery of recent residential and commercial painting projects in Bakersfield, CA. See why we are the top-rated local painters.";
---

<Layout title={title} description={description}>
    <!-- Navbar Fija -->
    <Navbar />

    <main class="bg-[#050505] min-h-screen relative overflow-hidden">
        <!-- Ambient Blurs (Dopamine Effect) -->
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-[var(--brand-primary)]/20 rounded-full blur-[120px] pointer-events-none"
        >
        </div>

        <!-- Hero Section -->
        <div class="relative pt-32 pb-12 px-6">
            <div class="max-w-7xl mx-auto text-center">
                <span
                    class="text-[var(--brand-accent)] font-bold tracking-[0.2em] uppercase text-xs block mb-4 animate-fade-in-up"
                >
                    Our Portfolio
                </span>
                <h1
                    class="text-4xl md:text-6xl font-serif text-[#EAE0D5] mb-6 animate-fade-in-up delay-100"
                >
                    Our Project <span
                        class="text-[var(--brand-accent)] italic opacity-90"
                        >Gallery</span
                    >
                </h1>
                <p
                    class="text-white/60 text-lg md:text-xl font-light max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-200"
                >
                    See our latest residential and commercial painting
                    transformations across Bakersfield. Follow us on Instagram
                    for daily updates.
                </p>
            </div>
        </div>

        <!-- Gallery Content -->
        <div class="max-w-[1400px] mx-auto px-4 sm:px-6 pb-24 relative z-10">
            <!-- Divider -->
            <div class="w-full h-px bg-white/5 mb-16"></div>

            <div class="min-h-[400px] animate-fade-in-up delay-300">
                <InstagramGallery client:load />
            </div>

            <!-- CTA Section -->
            <div
                class="mt-24 text-center bg-white/5 rounded-3xl p-12 border border-white/10 relative overflow-hidden group"
            >
                <div
                    class="absolute inset-0 bg-[var(--brand-accent)]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                >
                </div>

                <h2
                    class="text-3xl md:text-4xl font-serif text-[#EAE0D5] mb-6 relative z-10"
                >
                    Inspired by our work?
                </h2>
                <p class="text-white/60 mb-8 max-w-xl mx-auto relative z-10">
                    Let's transform your home or business with the same
                    attention to detail.
                </p>
                <div class="relative z-10">
                    <a
                        href="/contact"
                        class="inline-block bg-[var(--brand-accent)] hover:bg-[#b0967a] text-[#22333B] px-10 py-4 rounded-full font-bold uppercase tracking-widest text-sm shadow-[0_0_20px_rgba(198,172,143,0.3)] hover:shadow-[0_0_30px_rgba(198,172,143,0.5)] transition-all transform hover:-translate-y-1"
                    >
                        Get Free Estimate
                    </a>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<style>
    /* Custom Animations consistent with the theme */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.8s ease-out forwards;
    }

    .delay-100 {
        animation-delay: 0.1s;
    }
    .delay-200 {
        animation-delay: 0.2s;
    }
    .delay-300 {
        animation-delay: 0.3s;
    }
</style>
