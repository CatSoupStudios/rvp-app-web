---
// SEO: Schema Markup para LocalBusiness (Vital para Google Maps y Búsqueda Local)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  name: "Rangel Valley Painting",
  image:
    "https://res.cloudinary.com/dlh3rtxxm/image/upload/v1763851619/logo-rvp_dwkycu.png",
  description:
    "Premier residential and commercial painting services in Bakersfield, CA. Specializing in cabinet refinishing, interior, and exterior transformations.",
  address: {
    "@type": "PostalAddress",
    addressLocality: "Bakersfield",
    addressRegion: "CA",
    addressCountry: "US",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "35.3733",
    longitude: "-119.0187",
  },
  url: "https://rangelvalleypainting.com",
  telephone: "+16614286638",
  priceRange: "$$",
};
---

<section
  id="home"
  class="relative w-full min-h-screen flex items-center justify-center overflow-hidden bg-[#050505]"
>
  <!-- 1. Background: Imagen Cinemática con Overlay -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute inset-0 bg-gradient-to-b from-[#050505]/80 via-[#050505]/50 to-[#050505] z-10"
    >
    </div>
    <!-- Imagen de Alta Calidad Optimizada -->
    <img
      src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2000&auto=format&fit=crop"
      alt="Luxury Residential Painting Bakersfield"
      class="w-full h-full object-cover animate-ken-burns opacity-60"
    />
  </div>

  <!-- 2. Contenido Hero -->
  <div
    class="relative z-20 max-w-5xl mx-auto px-6 flex flex-col items-center text-center pt-20"
  >
    <!-- Badge "Establecido" -->
    <div class="mb-8 animate-fade-in-up opacity-0">
      <span
        class="py-1.5 px-4 border border-white/10 bg-white/5 backdrop-blur-md rounded-full text-gray-300 font-medium tracking-[0.3em] uppercase text-[10px] md:text-xs shadow-lg"
      >
        Serving Bakersfield & Kern County
      </span>
    </div>

    <!-- H1 SEO Optimizado pero Visualmente Elegante -->
    <h1
      class="text-5xl md:text-7xl lg:text-8xl font-light text-white leading-[1.1] tracking-tight mb-8 animate-fade-in-up delay-100 opacity-0"
    >
      The art of enduring quality. <br class="hidden md:block" />
      <span
        class="font-serif italic text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-200 to-gray-500 pr-2"
      >
        Premier Painters in Bakersfield.
      </span>
    </h1>

    <!-- Descripción con Keywords Naturales -->
    <p
      class="text-gray-400 text-lg md:text-xl font-light leading-relaxed max-w-2xl mb-12 animate-fade-in-up delay-200 opacity-0"
    >
      Elevating Bakersfield homes with master craftsmanship. From <strong
        >cabinet refinishing</strong
      > to <strong>luxury exteriors</strong>, we deliver flawless finishes that
      redefine your property.
    </p>

    <!-- Botones de Acción (UX) -->
    <div
      class="flex flex-col sm:flex-row gap-6 animate-fade-in-up delay-300 opacity-0 w-full sm:w-auto"
    >
      <!-- Primary CTA -->
      <a
        href="/contact"
        class="group relative px-8 py-4 overflow-hidden rounded-full bg-white text-black transition-all hover:scale-[1.02] hover:shadow-[0_0_40px_rgba(255,255,255,0.3)]"
      >
        <span
          class="relative flex items-center justify-center gap-2 font-bold tracking-[0.15em] text-xs uppercase"
        >
          Get Free Estimate
          <svg
            class="w-4 h-4 transition-transform group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
          >
        </span>
      </a>

      <!-- Secondary CTA -->
      <a
        href="#services"
        class="group px-8 py-4 rounded-full border border-white/20 text-white hover:bg-white/10 transition-all hover:border-white/40"
      >
        <span
          class="flex items-center justify-center gap-2 font-medium tracking-[0.15em] text-xs uppercase"
        >
          Explore Services
        </span>
      </a>
    </div>

    <!-- Scroll Indicator -->
    <div
      class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce-slow opacity-50 hidden md:block"
    >
      <svg
        class="w-6 h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1"
          d="M19 14l-7 7-7-7"></path></svg
      >
    </div>
  </div>
</section>

<!-- INVISIBLE SEO POWER: Schema Markup -->
<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

<style>
  /* Animación Ken Burns (Zoom lento) */
  @keyframes kenBurns {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.1);
    }
  }
  .animate-ken-burns {
    animation: kenBurns 20s ease-out infinite alternate;
    will-change: transform;
  }

  /* Animación Fade In Up con Opacity Control */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  .delay-100 {
    animation-delay: 0.2s;
  }
  .delay-200 {
    animation-delay: 0.4s;
  }
  .delay-300 {
    animation-delay: 0.6s;
  }

  /* Bounce lento para el scroll indicator */
  @keyframes bounceSlow {
    0%,
    100% {
      transform: translate(-50%, 0);
    }
    50% {
      transform: translate(-50%, 10px);
    }
  }
  .animate-bounce-slow {
    animation: bounceSlow 2s infinite ease-in-out;
  }
</style>
