---
// SEO: Definimos los servicios con palabras clave estratégicas para Bakersfield
const services = [
  {
    id: "01",
    title: "Residential Interior Painting",
    desc: "Flawless interior painting for Bakersfield homes. We specialize in walls, ceilings, and high-end trim detailing.",
    image: "https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?q=80&w=800&auto=format&fit=crop",
    link: "/residential-interior",
    alt: "Residential interior painting services in Bakersfield living room"
  },
  {
    id: "02",
    title: "Kitchen Cabinet Refinishing",
    desc: "Factory-grade spray finishes. Transform your kitchen cabinets with a durable, modern look for a fraction of replacement cost.",
    image: "https://images.unsplash.com/photo-1556911220-e15b29be8c8f?q=80&w=800&auto=format&fit=crop",
    link: "/cabinet-refinishing",
    alt: "Kitchen cabinet refinishing and painting white cabinets"
  },
  {
    id: "03",
    title: "Residential Exterior Painting",
    desc: "Protect your home from the Bakersfield sun. Premium weather-resistant coatings, stucco repair, and curb appeal enhancement.",
    image: "https://images.unsplash.com/photo-1600607686527-6fb886090705?q=80&w=800&auto=format&fit=crop",
    link: "/residential-exterior",
    alt: "Modern residential exterior house painting and stucco repair"
  },
  {
    id: "04",
    title: "Commercial Services",
    desc: "Efficient painting solutions for offices, retail, HOAs, and industrial facilities. Minimal disruption to your business operations.",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=800&auto=format&fit=crop",
    link: "/commercial-services",
    alt: "Commercial office painting and industrial coatings service"
  },
  {
    id: "05",
    title: "Drywall & Texture",
    desc: "Seamless drywall repair, patching, and texture matching. We create the perfect canvas before any paint is applied.",
    image: "https://images.unsplash.com/photo-1649766964924-1d257ddf0742?q=80&w=1100&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    link: "/contact",
    alt: "Professional drywall repair and texture matching"
  },
  {
    id: "06",
    title: "Wood Restoration",
    desc: "Revitalize sun-damaged decks, fences, and pergolas with deep penetrating stains and sealants.",
    image: "https://images.unsplash.com/photo-1615873968403-89e068629265?q=80&w=800&auto=format&fit=crop",
    link: "/contact",
    alt: "Wood staining and restoration for decks and fences"
  }
];

// Schema Markup para Google (Service List)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Professional Painting Services",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Rangel Valley Painting"
  },
  "areaServed": {
    "@type": "City",
    "name": "Bakersfield"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Painting Services Catalog",
    "itemListElement": services.map(service => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service.title,
        "description": service.desc
      }
    }))
  }
};
---

<section id="services" class="relative py-24 md:py-32 bg-[#050505] text-white overflow-hidden border-t border-white/5">
  
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <!-- Header Minimalista & SEO Friendly (H2 + Keywords) -->
    <div class="mb-20 grid grid-cols-1 md:grid-cols-2 gap-12 items-end">
      <div>
        <span class="text-[10px] md:text-xs font-medium tracking-[0.3em] uppercase text-gray-500 mb-6 block">
          Our Expertise
        </span>
        <h2 class="text-4xl md:text-6xl font-light tracking-tight leading-[1.1] text-white">
          Expert Painting Services <br/>
          <span class="font-serif italic text-gray-400">designed to endure.</span>
        </h2>
      </div>

      <div class="md:pl-10">
        <p class="text-gray-400 text-lg font-light leading-relaxed max-w-md">
          Every surface is treated with meticulous preparation and architectural-level detailing. We provide the most reliable <strong>painting services in Bakersfield</strong>.
        </p>
      </div>
    </div>

    <!-- Grid Minimalista Clean -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      {services.map((service) => (
        <a href={service.link} class="group relative h-[400px] overflow-hidden bg-[#111] block" aria-label={`Learn more about ${service.title}`}>
          
          <!-- Imagen Background con Alt Text Optimizado -->
          <div class="absolute inset-0 opacity-60 group-hover:opacity-40 transition-opacity duration-700 ease-out">
            <img 
              src={service.image} 
              alt={service.alt} 
              class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-110" 
              loading="lazy"
              width="800"
              height="600"
            />
          </div>
          
          <!-- Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-[#000] via-transparent to-transparent opacity-90"></div>

          <!-- Contenido (H3 para SEO semántico) -->
          <div class="absolute inset-0 p-8 flex flex-col justify-between">
            <div class="flex justify-between items-start">
               <span class="text-xs font-mono text-gray-500">/{service.id}</span>
               <div class="w-8 h-8 rounded-full border border-white/20 flex items-center justify-center text-white opacity-0 group-hover:opacity-100 transition-all duration-500 -translate-y-2 group-hover:translate-y-0">
                 <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
               </div>
            </div>

            <div>
              <h3 class="text-2xl font-light mb-3 text-white group-hover:text-[var(--brand-blue)] transition-colors">
                {service.title}
              </h3>
              <p class="text-sm text-gray-400 font-light leading-relaxed max-w-[90%] opacity-80 group-hover:opacity-100 transition-opacity">
                {service.desc}
              </p>
            </div>
          </div>
          
          <div class="absolute inset-0 border border-white/5 group-hover:border-white/20 transition-colors duration-500 pointer-events-none"></div>
        </a>
      ))}
    </div>

    <!-- CTA Final -->
    <div class="mt-24 text-center">
      <a href="/contact" class="inline-flex items-center gap-3 text-gray-300 hover:text-white transition-colors group">
        <span class="border-b border-gray-700 pb-1 text-sm uppercase tracking-widest group-hover:border-white transition-all">
          Request Detailed Pricing Guide
        </span>
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>

  </div>
</section>

<!-- INVISIBLE SEO POWER: Schema Markup -->
<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />