---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const socials = [
  {
    name: "Instagram",
    url: "https://www.instagram.com/rangelvalleypainting/",
    icon: "M11.344 2h1.312c6.745 0 7.944.277 8.588.623a5.499 5.499 0 0 1 2.128 1.374 5.499 5.499 0 0 1 1.374 2.128c.346.644.623 1.843.623 8.588v1.312c0 6.745-.277 7.944-.623 8.588a5.499 5.499 0 0 1-1.374 2.128 5.499 5.499 0 0 1-2.128 1.374c-.644.346-1.843.623-8.588.623H12.656c-6.745 0-7.944-.277-8.588-.623a5.499 5.499 0 0 1-2.128-1.374 5.499 5.499 0 0 1-1.374-2.128c-.346-.644-.623-1.843-.623-8.588V12.656c0-6.745.277-7.944.623-8.588a5.499 5.499 0 0 1 1.374-2.128 5.499 5.499 0 0 1 2.128-1.374c.644-.346 1.843-.623 8.588-.623zM12 7a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm0 1.866a3.134 3.134 0 1 1 0 6.268 3.134 3.134 0 0 1 0-6.268zm5.896-2.998a1.12 1.12 0 1 0 0 2.24 1.12 1.12 0 0 0 0-2.24z",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/rangelvalleypaintinginc",
    icon: "M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z",
  },
];
---

<footer
  class="relative bg-[#050505] text-[#EAE0D5] overflow-hidden pt-20 border-t border-white/5"
>
  <!-- Tipografía Gigante de Fondo -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-full text-center pointer-events-none select-none overflow-hidden"
  >
    <h1
      class="text-[18vw] leading-[0.8] font-serif font-bold text-white opacity-[0.02] tracking-tighter whitespace-nowrap"
    >
      RANGEL VALLEY
    </h1>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div
      class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-8 pb-20 border-b border-white/10"
    >
      <!-- Columna 1: Brand & Social -->
      <div class="md:col-span-4 flex flex-col justify-between h-full">
        <div>
          <a href="/" class="inline-block mb-8 group">
            <span
              class="font-serif text-3xl text-white tracking-wide group-hover:text-[var(--brand-accent)] transition-colors duration-300"
            >
              Rangel Valley.
            </span>
            <span
              class="block text-[10px] uppercase tracking-[0.4em] text-[var(--brand-accent)] opacity-80 mt-1"
            >
              Est. Legacy in Kern County
            </span>
          </a>

          <p class="text-white/60 font-light text-lg leading-relaxed max-w-sm">
            Elevating properties through precision painting and architectural
            finishes. We don't just cover walls; we define spaces.
          </p>
        </div>

        <div class="flex gap-6 mt-10">
          {
            socials.map((social) => (
              <a
                href={social.url}
                aria-label={social.name}
                target="_blank"
                rel="noopener noreferrer"
                class="group relative w-12 h-12 flex items-center justify-center rounded-full border border-white/20 hover:border-[var(--brand-accent)] hover:bg-[var(--brand-accent)] transition-all duration-300"
              >
                <svg
                  class="w-5 h-5 text-white group-hover:text-[#050505] transition-colors"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Columna 2: Company -->
      <div class="md:col-span-2 md:pl-4">
        <h4
          class="text-[var(--brand-accent)] font-bold uppercase tracking-[0.2em] text-xs mb-8"
        >
          Company
        </h4>
        <ul class="space-y-4">
          <li>
            <a
              href="/"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Home
            </a>
          </li>
          <li>
            <a
              href="/#about"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              About
            </a>
          </li>
          <li>
            <a
              href="/#projects"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Our Work
            </a>
          </li>
          <li>
            <a
              href="/careers"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Careers
              <span
                class="ml-2 w-2 h-2 rounded-full bg-[var(--brand-accent)] animate-pulse"
              ></span>
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 3: Services (NUEVO) -->
      <div class="md:col-span-3">
        <h4
          class="text-[var(--brand-accent)] font-bold uppercase tracking-[0.2em] text-xs mb-8"
        >
          Services
        </h4>
        <ul class="space-y-4">
          <li>
            <a
              href="/cabinet-refinishing"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Cabinet Refinishing
            </a>
          </li>
          <li>
            <a
              href="/residential-interior"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Residential Interior
            </a>
          </li>
          <li>
            <a
              href="/residential-exterior"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Residential Exterior
            </a>
          </li>
          <li>
            <a
              href="/commercial-services"
              class="group inline-flex items-center gap-2 text-white/70 hover:text-white text-sm font-medium uppercase tracking-widest transition-colors"
            >
              <span
                class="w-0 h-px bg-[var(--brand-accent)] transition-all duration-300 group-hover:w-4"
              ></span>
              Commercial Services
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 4: Contacto -->
      <div class="md:col-span-3">
        <h4
          class="text-[var(--brand-accent)] font-bold uppercase tracking-[0.2em] text-xs mb-8"
        >
          Headquarters
        </h4>

        <div class="space-y-6">
          <div>
            <p class="text-white text-lg font-serif">Bakersfield, California</p>
            <p class="text-white/50 text-sm font-light mt-1">
              Serving Bakersfield, Seven Oaks, Stockdale & Kern County
            </p>
          </div>

          <div>
            <a
              href="tel:6614286638"
              class="block text-2xl text-white font-light hover:text-[var(--brand-accent)] transition-colors"
            >
              (661) 428-6638
            </a>
            <span class="text-[10px] uppercase tracking-widest text-white/30"
              >Mon - Sat, 8am - 6pm</span
            >
          </div>

          <div>
            <a
              href="mailto:info@rangelvalleypainting.com"
              class="text-lg text-white/80 hover:text-white border-b border-white/20 hover:border-[var(--brand-accent)] pb-1 transition-all"
            >
              info@rangelvalleypainting.com
            </a>
          </div>
        </div>
      </div>
    </div>

    <div
      class="pt-8 pb-12 flex flex-col md:flex-row justify-between items-center gap-4 text-[10px] uppercase tracking-[0.15em] text-white/30 font-medium"
    >
      <div class="flex gap-6 flex-wrap justify-center">
        <span>&copy; {currentYear} Rangel Valley Painting</span>
        <span class="hidden md:inline">|</span>
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a
        >
        <a href="#" class="hover:text-white transition-colors"
          >Terms of Service</a
        >
      </div>

      <div class="flex items-center gap-2">
        <span>Designed with precision</span>
        <div class="w-1 h-1 rounded-full bg-[var(--brand-accent)]"></div>
      </div>
    </div>
  </div>

  <button
    id="back-to-top"
    class="fixed bottom-8 right-8 z-40 w-12 h-12 bg-[var(--brand-accent)] text-[#050505] rounded-full flex items-center justify-center shadow-2xl shadow-black/50 translate-y-20 opacity-0 transition-all duration-500 hover:-translate-y-2 hover:bg-white"
    aria-label="Back to top"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
      ><path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
    >
  </button>
</footer>

<script>
  // Lógica para el botón "Back to Top"
  const backToTopBtn = document.getElementById("back-to-top");

  if (backToTopBtn) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 500) {
        backToTopBtn.classList.remove("translate-y-20", "opacity-0");
      } else {
        backToTopBtn.classList.add("translate-y-20", "opacity-0");
      }
    });

    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }
</script>
