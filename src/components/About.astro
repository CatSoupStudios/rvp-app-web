---
// src/components/About.astro

// SEO: Schema Markup específico para la sección "About"
const aboutSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  mainEntity: {
    "@type": "LocalBusiness",
    name: "Rangel Valley Painting",
    description:
      "Premier painting craftsmen in Bakersfield dedicated to quality over quantity. Specializing in residential and commercial transformations.",
    foundingLocation: {
      "@type": "City",
      name: "Bakersfield",
    },
    knowsAbout: [
      "Interior Painting",
      "Exterior Painting",
      "Cabinet Refinishing",
      "Craftsmanship",
    ],
    priceRange: "$$",
  },
};
---

<section
  id="about"
  class="relative py-24 md:py-32 bg-[#080808] text-white overflow-hidden"
  itemscope
  itemtype="https://schema.org/LocalBusiness"
>
  <!-- Metadata invisible para el crawler -->
  <meta itemprop="name" content="Rangel Valley Painting" />
  <meta
    itemprop="description"
    content="Bakersfield's premier painting craftsmen, prioritizing rigorous prep work and premium-grade coatings."
  />
  <meta itemprop="address" content="Bakersfield, CA" />

  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
      <!-- 1. Imagen Editorial (Izquierda) -->
      <div class="relative group">
        <!-- Marco decorativo -->
        <div
          class="absolute -top-4 -left-4 w-full h-full border border-white/10 rounded-sm z-0 transition-transform duration-500 group-hover:translate-x-2 group-hover:translate-y-2"
        >
        </div>

        <div
          class="relative z-10 overflow-hidden rounded-sm aspect-[4/5] bg-[#111]"
        >
          <!-- Imagen de "Artesano" con Alt Text SEO -->
          <img
            src="https://images.unsplash.com/photo-1715370251690-9a5ddd6849dc?q=80&w=774&auto=format&fit=crop"
            alt="Professional painter craftsman from Rangel Valley Painting Bakersfield applying detail work"
            itemprop="image"
            class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-out opacity-80 group-hover:opacity-100 scale-105 group-hover:scale-100"
          />
          <!-- Overlay Gradiente -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-[#080808] via-transparent to-transparent opacity-50"
          >
          </div>
        </div>

        <!-- Etiqueta Flotante -->
        <div
          class="absolute bottom-8 right-[-20px] bg-white text-black py-4 px-8 shadow-2xl shadow-white/10 animate-fade-in-up delay-300 hidden md:block"
        >
          <p class="font-serif italic text-xl">"Quality over quantity."</p>
        </div>
      </div>

      <!-- 2. Contenido (Derecha) -->
      <div>
        <span
          class="text-[var(--brand-blue)] font-bold tracking-[0.2em] uppercase text-xs block mb-6"
        >
          About Rangel Valley
        </span>

        <h2 class="text-4xl md:text-6xl font-light leading-[1.1] mb-8">
          More than painters. <br />
          <span class="font-serif italic text-gray-400">We are craftsmen.</span>
        </h2>

        <div class="space-y-6 text-gray-400 font-light text-lg leading-relaxed">
          <p>
            Among <strong>Painters in Bakersfield</strong>, true craftsmanship
            is rare. <strong>Rangel Valley Painting</strong> stands out by treating
            every home in <span itemprop="areaServed">Kern County</span> as a masterpiece.
          </p>
          <p>
            We don't rush. We don't cut corners on prep work. We believe that
            the longevity of a finish is determined long before the brush
            touches the wall. From rigorous sanding to using only premium-grade
            coatings, our process is designed for homeowners who value
            excellence.
          </p>
        </div>

        <!-- Stats Grid -->
        <div
          class="grid grid-cols-3 gap-8 mt-12 pt-12 border-t border-white/10"
        >
          <div>
            <span class="block text-3xl md:text-4xl font-light text-white mb-1"
              >15+</span
            >
            <span class="text-xs uppercase tracking-widest text-gray-500"
              >Years Exp.</span
            >
          </div>
          <div>
            <span class="block text-3xl md:text-4xl font-light text-white mb-1"
              >100%</span
            >
            <span class="text-xs uppercase tracking-widest text-gray-500"
              >Satisfaction</span
            >
          </div>
          <div>
            <span class="block text-3xl md:text-4xl font-light text-white mb-1"
              >500+</span
            >
            <span class="text-xs uppercase tracking-widest text-gray-500"
              >Projects</span
            >
          </div>
        </div>

        <!-- Firma / Cierre -->
        <div class="mt-12 flex items-center gap-4">
          <div class="h-px w-12 bg-[var(--brand-blue)]"></div>
          <span class="text-sm font-medium tracking-widest uppercase text-white"
            >The Rangel Standard</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<!-- SEO: JSON-LD Script Inyectado -->
<script type="application/ld+json" set:html={JSON.stringify(aboutSchema)} />
