---
// src/components/Process.astro

const steps = [
  {
    number: "01",
    title: "Consultation",
    desc: "Detailed walkthrough & transparent proposal. No hidden fees."
  },
  {
    number: "02",
    title: "Meticulous Prep",
    desc: "Floors masked, furniture protected. We treat your home like ours."
  },
  {
    number: "03",
    title: "Execution",
    desc: "Efficient work with premium coatings for a factory-grade finish."
  },
  {
    number: "04",
    title: "Final Walkthrough",
    desc: "We inspect every inch with you. We aren't happy until you are."
  }
];

// Frases de "Familia y Confianza" para la cinta
const trustValues = [
  "Family Owned & Operated",
  "Kern County Natives",
  "Legacy of Craftsmanship",
  "Honest Work, Fair Prices",
  "Licensed & Insured",
  "Building Trust Since Day One"
];
---

<section id="process" class="py-20 md:py-32 bg-[var(--brand-bg)] border-b border-[var(--brand-border)] overflow-hidden">
  
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 mb-12 md:mb-32 items-end">
      <div>
        <span class="text-[var(--brand-accent)] font-bold tracking-[0.2em] uppercase text-[10px] md:text-xs block mb-4 md:mb-6">
          The Rangel Standard
        </span>
        <h2 class="text-4xl md:text-6xl font-serif text-[var(--brand-primary)] leading-[1.1]">
          Seamless execution.<br>
          <span class="italic text-[var(--brand-text-muted)] opacity-60">Zero stress.</span>
        </h2>
      </div>
      <div class="hidden md:block lg:pl-10">
        <p class="text-[var(--brand-text-muted)] text-lg font-light leading-relaxed max-w-md">
          We’ve refined our workflow to respect your time and your property. A luxury result requires a luxury experience.
        </p>
      </div>
    </div>

    <div class="md:hidden flex overflow-x-auto snap-x snap-mandatory gap-4 pb-8 -mx-6 px-6 scrollbar-hide">
      {steps.map((step) => (
        <div class="snap-center flex-shrink-0 w-[80vw] bg-white border border-[var(--brand-border)] p-6 rounded-2xl shadow-sm">
          <div class="flex items-center justify-between mb-4">
             <span class="text-5xl font-serif text-[var(--brand-accent)] opacity-50">
              {step.number}
            </span>
            <div class="w-8 h-8 rounded-full bg-[var(--brand-bg)] flex items-center justify-center text-[var(--brand-primary)]">
               <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            </div>
          </div>
          
          <h3 class="text-lg font-bold text-[var(--brand-primary)] mb-2">
            {step.title}
          </h3>
          <p class="text-sm text-[var(--brand-text-muted)] leading-relaxed">
            {step.desc}
          </p>
        </div>
      ))}
    </div>

    <div class="hidden md:grid grid-cols-2 lg:grid-cols-4 gap-12 relative">
      
      <div class="absolute top-0 left-0 w-full h-px bg-[var(--brand-border)]"></div>

      {steps.map((step) => (
        <div class="relative group pt-12">
          <div class="absolute top-0 left-0 w-0 h-0.5 bg-[var(--brand-primary)] transition-all duration-700 group-hover:w-full"></div>

          <span class="block text-7xl font-serif text-[var(--brand-border)] group-hover:text-[var(--brand-accent)] transition-colors duration-500 mb-6">
            {step.number}
          </span>

          <h3 class="text-xl font-bold text-[var(--brand-primary)] mb-3 tracking-tight">
            {step.title}
          </h3>
          
          <p class="text-sm text-[var(--brand-text-muted)] leading-relaxed opacity-80">
            {step.desc}
          </p>
        </div>
      ))}
    </div>

  </div>

  <div class="mt-12 md:mt-32 border-t border-b border-[var(--brand-border)] py-4 md:py-8 bg-[var(--color-bone)] overflow-hidden relative">
    
    <div class="absolute inset-0 z-10 pointer-events-none bg-gradient-to-r from-[var(--color-bone)] via-transparent to-[var(--color-bone)]"></div>
    
    <div class="flex whitespace-nowrap marquee-container">
      {[...trustValues, ...trustValues, ...trustValues].map((val) => (
        <div class="flex items-center mx-6 md:mx-12 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300">
          <svg class="w-3 h-3 text-[var(--brand-accent)] mr-3 md:mr-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          
          <span class="text-[10px] md:text-sm font-bold uppercase tracking-[0.2em] text-[var(--brand-primary)]">
            {val}
          </span>
        </div>
      ))}
    </div>
  </div>

</section>

<style>
  /* Animación Custom */
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  /* MÓVIL: Rápido (15s) */
  .marquee-container {
    animation: marquee 15s linear infinite;
  }

  /* DESKTOP: Lento (45s) */
  @media (min-width: 768px) {
    .marquee-container {
      animation: marquee 45s linear infinite;
    }
  }

  /* Ocultar scrollbar en carrusel móvil */
  .scrollbar-hide::-webkit-scrollbar {
      display: none;
  }
  .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
  }
</style>