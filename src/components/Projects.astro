---
// src/components/Projects.astro

const projects = [
  {
    category: "Residential Interior",
    title: "Modern Farmhouse Renovation",
    location: "Bakersfield, CA",
    image: "https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg",
  },
  {
    category: "Cabinet Refinishing",
    title: "Matte Black Kitchen Transformation",
    location: "Seven Oaks",
    image: "https://images.pexels.com/photos/3016430/pexels-photo-3016430.jpeg", // Cocina oscura elegante
  },
  {
    category: "Exterior Protection",
    title: "Estate Stucco Restoration",
    location: "Stockdale Estates",
    image: "https://images.pexels.com/photos/206172/pexels-photo-206172.jpeg",
  },
  {
    category: "Commercial",
    title: "Boutique Office Space",
    location: "Downtown Bakersfield",
    image: "https://images.pexels.com/photos/1170412/pexels-photo-1170412.jpeg",
  },
];
---

<section
  id="projects"
  class="relative py-24 md:py-40 bg-[var(--brand-primary)] text-[var(--color-bone)] overflow-hidden"
>
  <div
    class="absolute top-0 right-0 w-[500px] h-[500px] bg-[var(--brand-accent)]/5 rounded-full blur-[120px] pointer-events-none translate-x-1/2 -translate-y-1/2"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div
      class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8"
    >
      <div class="max-w-2xl">
        <span
          class="text-[var(--brand-accent)] font-bold tracking-[0.2em] uppercase text-xs block mb-4"
        >
          Selected Works
        </span>
        <h2
          class="text-5xl md:text-7xl font-serif font-medium tracking-tight leading-none text-white"
        >
          Evidence of <br />
          <span class="italic text-[var(--brand-accent)] opacity-90"
            >Excellence.</span
          >
        </h2>
      </div>

      <div class="hidden md:block pb-2">
        <a
          href="#contact"
          class="group inline-flex items-center gap-2 text-sm uppercase tracking-widest text-[var(--color-bone)] hover:text-white transition-colors"
        >
          View Full Portfolio
          <svg
            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
          >
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16 lg:gap-y-24">
      <div class="flex flex-col gap-16 lg:gap-24">
        {
          projects
            .filter((_, i) => i % 2 === 0)
            .map((project, index) => (
              <div class="group cursor-pointer">
                <div class="relative w-full aspect-[4/5] md:aspect-[3/4] overflow-hidden rounded-[2px] mb-6">
                  <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-500 z-10" />
                  <img
                    src={project.image}
                    alt={`${project.title} - ${project.category} service in ${project.location}`}
                    class="w-full h-full object-cover transition-transform duration-[1.5s] ease-[cubic-bezier(0.25,1,0.5,1)] group-hover:scale-110"
                    loading="lazy"
                  />
                </div>

                <div class="border-t border-white/10 pt-5 flex justify-between items-start group-hover:border-[var(--brand-accent)]/50 transition-colors duration-500">
                  <div>
                    <span class="text-xs text-[var(--brand-accent)] uppercase tracking-[0.15em] mb-2 block">
                      {project.category}
                    </span>
                    <h3 class="text-2xl md:text-3xl font-serif text-white mb-1 group-hover:text-[var(--brand-accent)] transition-colors duration-300">
                      {project.title}
                    </h3>
                    <p class="text-sm text-white/50 font-light">
                      {project.location}
                    </p>
                  </div>
                  <div class="opacity-0 transform -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500 delay-100 text-[var(--brand-accent)]">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            ))
        }
      </div>

      <div class="flex flex-col gap-16 lg:gap-24 md:mt-32">
        {
          projects
            .filter((_, i) => i % 2 !== 0)
            .map((project, index) => (
              <div class="group cursor-pointer">
                <div class="relative w-full aspect-[4/5] md:aspect-[3/4] overflow-hidden rounded-[2px] mb-6">
                  <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-500 z-10" />
                  <img
                    src={project.image}
                    alt={`${project.title} - ${project.category} service in ${project.location}`}
                    class="w-full h-full object-cover transition-transform duration-[1.5s] ease-[cubic-bezier(0.25,1,0.5,1)] group-hover:scale-110"
                    loading="lazy"
                  />
                </div>

                <div class="border-t border-white/10 pt-5 flex justify-between items-start group-hover:border-[var(--brand-accent)]/50 transition-colors duration-500">
                  <div>
                    <span class="text-xs text-[var(--brand-accent)] uppercase tracking-[0.15em] mb-2 block">
                      {project.category}
                    </span>
                    <h3 class="text-2xl md:text-3xl font-serif text-white mb-1 group-hover:text-[var(--brand-accent)] transition-colors duration-300">
                      {project.title}
                    </h3>
                    <p class="text-sm text-white/50 font-light">
                      {project.location}
                    </p>
                  </div>
                  <div class="opacity-0 transform -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500 delay-100 text-[var(--brand-accent)]">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            ))
        }

        <div class="md:hidden mt-8 text-center">
          <a
            href="#portfolio"
            class="inline-block border border-white/20 py-3 px-8 rounded-full text-sm uppercase tracking-widest hover:bg-white hover:text-[var(--brand-primary)] transition-all"
          >
            View All Projects
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
